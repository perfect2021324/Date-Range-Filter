{% extends "layouts/auth.twig" %}

{% block title %}{{ lang.forgot_password }}{% endblock %}

{% block content %}
	<form action="{{route('forgot.password')}}" name="register" method="post">
		{{ csrf.field | raw }}
		<div class="row d-flex align-items-center justify-content-center">
			<div class="col-md-5">
				<div class="card px-5 py-5 shadow-none">
					<h5 class="mt-3">{{ lang.forgot_password }}</h5>
					<div class="form-input{{ errors.email ? ' has-error' : '' }}">
						<i class="fa fa-envelope"></i> <input type="text" name="email" class="form-control" placeholder="{{ lang.email }}">
						{% if errors.email %}
							<span class="hel-block">{{ errors.email | first }}</span>
						{% endif %}
					</div>
					<button type="submit" class="btn btn-primary mt-4 signup">{{ lang.reset_password }}</button>
					<div class="text-center mt-4"> <a href="{{route('login')}}" class="text-decoration-none">{{ lang.login }}</a> </div>
				</div>
			</div>
		</div>
	</form>
{% endblock %}

