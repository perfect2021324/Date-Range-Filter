{% extends "layouts/auth.twig" %}

{% block title %}{{ lang.sign_up }}{% endblock %}

{% block content %}
	<form action="{{ route('register') }}" name="register" method="post">
		{{ csrf.field | raw }}
		<div class="row d-flex align-items-center justify-content-center">
			<div class="col-md-5">
				<div class="card px-5 py-5 shadow-none">
					<h5 class="mt-3">{{ lang.sign_up }}</h5>
					<div class="form-input{{ errors.email ? ' has-error' : '' }}">
						<i class="bi bi-envelope"></i>
						<input type="email" name="email" class="form-control" value="{{ old.email }}" placeholder="{{ lang.email }}">
						{% if errors.email %}
							<span class="hel-block">{{ errors.email | first }}</span>
						{% endif %}
					</div>

					<div class="form-input{{ errors.name ? ' has-error' : '' }}">
						<i class="bi bi-person"></i>
						<input type="text" name="username" class="form-control" value="{{ old.username }}" placeholder="{{ lang.username }}">
						{% if errors.username %}
							<span class="hel-block">{{ errors.username | first }}</span>
						{% endif %}
					</div>
					<div class="form-input">
						<div class="input-group mb-3">
							<i class="bi bi-lock"></i>
							<input type="password" name="password" placeholder="{{ lang.user_password }}" id="password" class="form-control {{ errors.password ? ' is-invalid' : '' }}" />
							<span class="input-group-text"><a href="javascript:;" class="text-dark" onclick="showPassword()">Show</a></span>
							{% if errors.password %}
								<div class="invalid-feedback">{{ errors.password | first }}</div>
							{% endif %}
						</div>
					</div>

					<div class="form-check">
						<input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked>
						<label class="form-check-label" for="flexCheckChecked"> {{ lang.sign_up_agree }} </label>
					</div>
					<button type="submit" class="btn btn-primary mt-4 signup">{{ lang.create_account }}</button>
					<!--<div class="text-center mt-3"> <span>Or continue with these social profile</span> </div>
                    <div class="d-flex justify-content-center mt-4">
                      <span class="social"><i class="fa fa-google"></i></span>
                      <span class="social"><i class="fa fa-facebook"></i></span>
                      <span class="social"><i class="fa fa-twitter"></i></span>
                      <span class="social"><i class="fa fa-linkedin"></i></span>
                    </div>-->
					<div class="text-center mt-4"> <span>{{ lang.have_an_account }}</span> <a href="{{ route('login') }}" class="text-decoration-none">{{ lang.login }}</a> </div>
				</div>
			</div>
		</div>
	</form>
{% endblock %}
{% block innerjs %}
	<script>
		function showPassword() {
			var x = document.getElementById("password");
			if (x.type === "password") {
				x.type = "text";
			} else {
				x.type = "password";
			}
		}
	</script>
{% endblock %}
