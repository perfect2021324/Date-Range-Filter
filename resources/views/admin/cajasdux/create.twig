                                   <div class="invalid-feedback">{{ errors.cb_barra | first }}</div>
                                {% endif %}
                            </div>

                            <div class="col-md-12">
                                <label class="control-label" for="cb_fecha">{{ lang.cajasdux_cb_fecha }}</label>
	                             <input id="cb_fecha" name="cb_fecha" type="text" class="date form-control {{ errors.cb_fecha ? ' is-invalid' : '' }}" value="" />
