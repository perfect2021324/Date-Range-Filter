
{% extends "layouts/app.twig" %}

{% block title %}{{ lang.add }} {{ lang.cajasdux }}{% endblock %}

{% block content %}
<div class="page-wrapper">
        <div class="page-content">
            <!--breadcrumb-->
            <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
                <div class="breadcrumb-title pe-3"><a href="{{route('cajasdux.index')}}" class="text-dark">{{ lang.cajasdux }}</a></div>
                <div class="ps-3">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0 p-0">
                            <li class="breadcrumb-item active" aria-current="page">{{ lang.add }} {{ lang.cajasdux }}</li>
                        </ol>
                    </nav>
                </div>
                <div class="ms-auto">
                    <div class="btn-group btn-group-sm">
                        <a class="btn btn-primary btn-sm" href="{{route('cajasdux.index')}}"><i class="bi bi-reply font16"></i> {{ lang.go_back }}</a>
                    </div>
                </div>
            </div>
            <!--end breadcrumb-->

            <div class="row">
                <div class="col-xl-7 mx-auto">
                {% include'partials/flash.twig' %}
                    <div class="card border shadow-none">
                        <div class="card-body p-5">
                            <form class="row g-3" method="post" action="{{ route('cajasdux.store') }}" enctype="multipart/form-data">
                                {{ csrf.field | raw }}
                        
                            <div class="col-md-12">
                                <label class="control-label" for="cb_barra">{{ lang.cajasdux_cb_barra }}</label>
	                             <input id="cb_barra" name="cb_barra" class="form-control {{ errors.cb_barra ? ' is-invalid' : '' }}" type="text" maxlength="50"  value="" />
