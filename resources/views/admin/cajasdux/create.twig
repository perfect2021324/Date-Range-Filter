	                             <input id="cb_diferencia" name="cb_diferencia" class="form-control {{ errors.cb_diferencia ? ' is-invalid' : '' }}" type="text" maxlength="50"  value="" />
                                {% if errors.cb_diferencia %}
                                   <div class="invalid-feedback">{{ errors.cb_diferencia | first }}</div>
