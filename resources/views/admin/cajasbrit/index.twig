
{% extends "layouts/app.twig" %}

{% block title %}{{ lang.cajasbrit }}{% endblock %}

{% block content %}
	<div class="page-wrapper">
		<div class="page-content">
			{% include 'partials/flash.twig' %}
			<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
				<div class="breadcrumb-title pe-3">{{ lang.cajasbrit }}</div>
				<div class="ps-3">
					<nav aria-label="breadcrumb">
						<ol class="breadcrumb mb-0 p-0">
							<li class="breadcrumb-item active" aria-current="page">
								<a href="{{ route('cajasbrit.create') }}" class="btn btn-outline-dark btn-sm">
									<i class="bi bi-plus"></i>{{ lang.add }}
								</a>
							</li>
						</ol>
					</nav>
				</div>
				<div class="ms-auto">
					<div class="btn-group">
						<button type="button" class="btn btn-primary">{{ lang.options }}</button>
						<button type="button" class="btn btn-primary split-bg-primary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown">	<span class="visually-hidden">Toggle Dropdown</span>
						</button>
						<div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-end">
							<a class="dropdown-item" href="{{ route('cajasbrit.export',{'type':'pdf'}) }}"><i class="bi bi-file-pdf"></i> {{ lang.pdf }}</a>
							<a class="dropdown-item" href="{{ route('cajasbrit.export',{'type':'xlsx'}) }}"><i class="bi bi-file-excel"></i> {{ lang.excel }}</a>
							<a class="dropdown-item" href="{{ route('cajasbrit.export',{'type':'csv'}) }}"><i class="bi bi-file"></i> {{ lang.csv }}</a>
						</div>
					</div>
				</div>
			</div>
			<!--end breadcrumb-->

			<div class="row">
				<div class="col-12">
					<div class="card shadow-none border">
						<div class="card-body">
							<div id="datatable_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
								<div class="row">
									<div class="col-sm-12">
										<table id="datatable" class="table table-bordered dt-responsive nowrap w-100 dataTable no-footer dtr-inline" role="grid" aria-describedby="datatable_info">
											<thead>
											<tr>
												<th>{{ lang.cajasbrit_cb_barra }}</th>                  
                                <th>{{ lang.cajasbrit_cb_fecha }}</th>                  
                                <th>{{ lang.cajasbrit_cb_cambio }}</th>                  
                                <th>{{ lang.cajasbrit_cb_efectivo }}</th>                  
                                <th>{{ lang.cajasbrit_cb_tarjeta }}</th>                  
                                <th>{{ lang.cajasbrit_cb_total }}</th>                  
                                <th>{{ lang.cajasbrit_cb_efectivoz }}</th>                  
                                <th>{{ lang.cajasbrit_cb_tarjetaz }}</th>                  
                                <th>{{ lang.cajasbrit_cb_totalz }}</th>                  
                                <th>{{ lang.cajasbrit_cb_diferencia }}</th>                  
                                <th>{{ lang.cajasbrit_cb_anticipada }}</th>                  
                                
												<th style="width: 10%">{{ lang.actions }}</th>
											</tr>
											</thead>

										</table>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div> <!-- end col -->
			</div> <!-- end row -->
		</div>
	</div>
{% endblock %}

{% block innerjs %}
<script type="text/javascript">
    var dataTable = $('#datatable').dataTable({
        processing: true,
        serverSide: true,
        iDisplayLength:25,
        "order": [[0, "asc" ]],
        "ajax": "{{ route('cajasbrit.datatable') }}",
        columns: [
                 {data: 'cb_barra'},              
                 {data: 'cb_fecha'},              
                 {data: 'cb_cambio'},              
                 {data: 'cb_efectivo'},              
                 {data: 'cb_tarjeta'},              
                 {data: 'cb_total'},              
                 {data: 'cb_efectivoz'},              
                 {data: 'cb_tarjetaz'},              
                 {data: 'cb_totalz'},              
                 {data: 'cb_diferencia'},              
                 {data: 'cb_anticipada'},              
            
            {data: 'action', orderable : false, searchable: false}
        ],
    });
	</script>
{% endblock %}
